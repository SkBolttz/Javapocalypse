    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
       ContaBancaria conta1 = new ContaBancaria();
       ContaBancaria conta2 = new ContaBancaria();
       
       conta1.setNumero(tfConta1.getText());
       conta2.setNumero(tfConta2.getText());
       
       double valorDeposito = Double.parseDouble(tfValorDeposito1.getText());
       conta1.depositar(valorDeposito);
       
       double valorDeposito2 = Double.parseDouble(tfValorDepositoCN2.getText());
       conta2.depositar(valorDeposito2);
       
       double saqueConta2 = Double.parseDouble(tfValorSaqueN2.getText());
       conta2.sacar(saqueConta2);
       
       double valorTransferencia = Double.parseDouble(tfTransferencia.getText());
       conta2.transferir(conta1, valorTransferencia);
       conta2.sacar(valorTransferencia);
       
       double saldo1 = conta1.getSaldo();
       tfsaldo1.setText(String.format("%.2f",saldo1));
       
       double saldo2 = conta2.getSaldo();
       tfsaldo2.setText(String.format("%.2f", saldo2));
    }                                        

